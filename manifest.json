{
  "manifest_version": 2,
  "name": "Hide Reddit comment & post Karma",
  "version": "1.0",
  "description": "Hides the total count of upvotes on comments and posts.",

  "icons": {
    "48": "/icons/AddonIcon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["karmabegone.js"]
    }
  ],

  "permissions": [
  "webRequest"
]
  
}
